#ifndef GCONF_H
#define GCONF_H

#include <gtk/gtk.h>
#include <stdlib.h>

#ifdef GNM_USE_HILDON
	#include <libgnomevfs/gnome-vfs.h>
	#include <gconf/gconf-client.h>
#else
	#include <gnome-vfs-2.0/libgnomevfs/gnome-vfs.h>
	#include <gconf/2/gconf/gconf-client.h>
#endif

void confStoreLocation(const gchar* local);
void confGetInt(GConfClient* gcClient, const gchar* key, gchar** vkey);
gchar* confLoadCurrentLocation();

#endif
